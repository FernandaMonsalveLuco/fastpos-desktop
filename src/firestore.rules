rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // === USUARIOS ===
    match /Usuarios/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // === PRODUCTOS ===
    match /Productos/{productoId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // === CATEGORÍAS ===
    match /categorias/{categoriaId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // === VENTAS ===
    match /ventas/{ventaId} {
      allow create: if request.auth != null &&
                    request.resource.data.cajeroId == request.auth.uid;
      allow read, update, delete: if request.auth != null;
    }

    // === PEDIDOS (minúscula) ===
    match /pedidos/{pedidoId} {
      allow read: if request.auth != null && 
                  (isCajero(request.auth.uid) || isMesero(request.auth.uid) || isCocina(request.auth.uid) || isAdmin(request.auth.uid));
      allow create: if request.auth != null && 
                    (isMesero(request.auth.uid) || isAdmin(request.auth.uid));
      allow update: if request.auth != null && 
                    (isCocina(request.auth.uid) || isAdmin(request.auth.uid));
      allow delete: if isAdmin(request.auth.uid);
    }

    // === PEDIDOS (mayúscula — si aún se usa) ===
    match /Pedidos/{pedidoId} {
      allow read: if request.auth != null && 
                  (isCajero(request.auth.uid) || isMesero(request.auth.uid) || isCocina(request.auth.uid) || isAdmin(request.auth.uid));
      allow create: if request.auth != null && 
                    (isMesero(request.auth.uid) || isAdmin(request.auth.uid));
      allow update: if request.auth != null && 
                    (isCocina(request.auth.uid) || isAdmin(request.auth.uid));
      allow delete: if isAdmin(request.auth.uid);
    }

    // === MESAS ===
    match /mesas/{mesaId} {
      allow read: if request.auth != null && 
                  (isMesero(request.auth.uid) || isCocina(request.auth.uid) || isCaja(request.auth.uid) || isAdmin(request.auth.uid));

      // ✅ CORREGIDO: se añade isCaja() para permitir update
      allow create, update: if request.auth != null && 
                              (isMesero(request.auth.uid) || isCaja(request.auth.uid) || isAdmin(request.auth.uid));

      allow delete: if isAdmin(request.auth.uid);
    }

    // === CLIENTES ===
    match /clientes/{clienteId} {
      allow read, create, update: if request.auth != null;
      allow delete: if isAdmin(request.auth.uid);
    }

    // === CONFIGURACIONES ===
    match /config/{configId} {
      allow read, write: if isAdmin(request.auth.uid);
    }

    // === REPORTES ===
    match /reportes/{reporteId} {
      allow read: if request.auth != null && isAdmin(request.auth.uid);
      allow write: if isAdmin(request.auth.uid);
    }

    // === FUNCIONES AUXILIARES - ROL ===
    function isAdmin(uid) {
      return exists(/databases/$(database)/documents/Usuarios/$(uid)) &&
             get(/databases/$(database)/documents/Usuarios/$(uid)).data.rol == 'admin';
    }

    function isCaja(uid) {
      return exists(/databases/$(database)/documents/Usuarios/$(uid)) &&
             get(/databases/$(database)/documents/Usuarios/$(uid)).data.rol == 'caja';
    }

    function isMesero(uid) {
      return exists(/databases/$(database)/documents/Usuarios/$(uid)) &&
             get(/databases/$(database)/documents/Usuarios/$(uid)).data.rol == 'mesero';
    }

    function isCocina(uid) {
      return exists(/databases/$(database)/documents/Usuarios/$(uid)) &&
             get(/databases/$(database)/documents/Usuarios/$(uid)).data.rol == 'cocina';
    }

    // === BLOQUEO POR DEFECTO ===
    match /{document=**} {
      allow read, write: if false;
    }
  }
}